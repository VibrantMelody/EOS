# Basic Settings
set hidden true
set icons true

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  touch $ans
}}

#custom open function
cmd open ${{
    test -L $f && f=$(redlink -f $f)
    case $(file --mime-type $f -b) in
        text/*) $EDITOR $f;;
        application/*) zathura $fx;;
        video/*) mpv $fx;;
        image/*) imv $fx;;
	*) for f in $fx; do setsid $OPENER $f > /dev/null 2> /dev/null & done;;
    esac
}}


# Archive bindings
cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar.*) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

# Bindings
# Remove some defaults
map m
map o
map n
map "'"
map '"'
map d

#map c $vscodium "$f"

map au unarchive
map ae execute

# Basic Functions
map . set hidden!
map DD delete
map p paste
map x cut
map y copy
map <enter> quit
map R reload
map mf mkfile
map md mkdir
map sS shell
map C clear
map q quit

# Movement
map gD cd ~/Documents
map gd cd ~/Downloads
map gc cd ~/.config
map gh cd ~
map gH cd /
map gm cd /run/mount/
